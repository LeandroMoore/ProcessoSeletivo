@model ProcessoSeletivo.Models.Produto
@{
    ViewBag.Title = "Edit";
}

<h2>Alterar Produto</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>

      <div class="editor-label" hidden>
            @Html.LabelFor(model => model.idProduto)
        </div>
        <div class="editor-field" hidden>
            @Html.EditorFor(model => model.idProduto)
            @Html.ValidationMessageFor(model => model.idProduto)
        </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.DescricaoProduto)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.DescricaoProduto)
        @Html.ValidationMessageFor(model => model.DescricaoProduto)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Preco)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Preco)
        @Html.ValidationMessageFor(model => model.Preco)
    </div>
        <p>
            <input type="submit" class="btn btn-primary btn-lg"  value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
