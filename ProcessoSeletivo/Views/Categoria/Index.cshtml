@model IEnumerable<ProcessoSeletivo.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Tela de Categoria</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idCategoriaPai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescricaoCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idCategoriaPai)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.idCategoria }) |
            @*@Html.ActionLink("Details", "Details", new { id = item.Idcategoria }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.idCategoria })
            </td>
        </tr>
    }

    </table>

<p>
    @Html.ActionLink("Cadastrar Nova Categoria", "Create")
</p>
<p><a href="/Categoria/Create" class="btn btn-primary btn-large">Cadastrar Nova Categoria</a></p>