<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Processo Seletivo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div style="align-content:flex-start">
        <img src="/images/LogoPetrobras.jpg" width="350" height="200"/>
    </div>

        <div class="masthead">
            <h3 class="text-muted">@Html.ActionLink("Processo Seletivo", "Index", "Home")</h3>
            <ul class="nav nav-justified">
                <li class="active">@Html.ActionLink("Categoria", "Index", "Categoria")</li>
                <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                <li>@Html.ActionLink("Catalogo", "Index", "Catalogo")</li>
            </ul>
        </div>

    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer></footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/Util.js")
    @RenderSection("scripts", required: false)
</body>
</html>
